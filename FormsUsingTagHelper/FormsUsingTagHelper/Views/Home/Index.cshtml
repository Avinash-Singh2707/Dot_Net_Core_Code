@model FormsUsingTagHelper.Models.Employee  // this view is binding with model class of employee,otherwise u get error
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<div class="container">
    <div class="row">              @* By default column is 12 *@
        <div class="col-sm-4">        @*  column 4 *@
            <form class="d-grid" asp-action="Index" asp-controller="Home" method="post">    
                <input asp-for="Name" placeholder="Enter Name" class="form-control"/>   
                <br />
                @* asp-for ke andar model class ki property pass kare, use wah bind hoga *@
                <input asp-for="Age" placeholder="Enter Age" class="form-control" />
                <br />
                <input asp-for="Designation" placeholder="Enter Designation" class="form-control" />
                <br />
                <input asp-for="Salary" placeholder="Enter Salary" class="form-control" />
                <br />
                <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()">
                    <option value="">Select Gender</option>
                </select>
                <br />
                <label>Married:</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Married" value="Yes" >
                    <label class="form-check-label" for="flexRadioDefault1">
                        Yes
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Married" value="No">
                    <label class="form-check-label" for="flexRadioDefault2">
                        No
                    </label>
                </div>
                <br />
                <textarea asp-for="Description" class="form-control" placeholder="Enter Description" rows="5">

                </textarea>
                <br />
                <input type="submit" value="Submit" class="btn btn-outline-primary btn-block" />
                
            </form>
        </div>
    </div>
</div>

@* Model property ki jo data-type hai, uske according yeh hume type generate kr ke deta hai,Refer Page-Source *@